{
  "rulesDirectory": "../../../dist",
  "rules": {
    "import-group-ordering": {
      "severity": "warning",
      "options": {
        "imports-groups": [
          {
            "name": "dependencies"
          },
          {
            "name": "fabric and common"
          },
          {
            "name": "product"
          },
          {
            "name": "other"
          }
        ],
        "matching-rules": [
          {
            "type": "project",
            "matches": "^(fabric|common)",
            "imports-group": "fabric and common"
          },
          {
            "type": "project",
            "matches": "^(products)",
            "imports-group": "product"
          },
          {
            "type": "dependencies",
            "imports-group": "dependencies"
          },
          {
            "type": "project",
            "matches": ".*",
            "imports-group": "other"
          }
        ]
      }
    }
  }
}
